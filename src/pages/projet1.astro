---
const project = {
  title: "Projet 1",
  description: "Un projet personnel réalisé pour apprendre à utiliser Blender.",
  image: "/réalisation2.png",
  details: "Ce projet inclut la modélisation 3D, la création de textures simples, et l'expérimentation avec les lumières et les rendus de base.",
};
---
<!doctype html>
<html lang="en">
  <head>
    <title>{project.title}</title>
  </head>
  <body>
    <main class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold mb-6">{project.title}</h1>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <img src={project.image} alt={project.title} class="w-full h-[300px] object-cover">
        <div class="p-6">
          <p class="text-gray-600 mb-4">{project.details}</p>
        </div>
      </div>
      <a href="/realisation" class="text-lime-500 font-semibold hover:underline mt-4 inline-block">Retour au portfolio</a>
    </main>
  </body>
</html>
