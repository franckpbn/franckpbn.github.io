---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
    <header class="flex justify-center py-4"><Header /></header>
    <main class="max-w-6xl mx-auto p-6">
      <h2 class="text-3xl font-semibold text-center mb-6">Mes Projets</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project 1 -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
          <div class="w-full h-56 bg-gray-300 rounded-t-lg mb-4"></div>
          <h3 class="text-xl font-semibold mb-2">UI/UX Design</h3>
          <p class="text-sm text-gray-600">Création d'une interface moderne.</p>
        </div>
        <!-- Project 2 -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
          <div class="w-full h-56 bg-gray-300 rounded-t-lg mb-4"></div>
          <h3 class="text-xl font-semibold mb-2">Site Web Responsive</h3>
          <p class="text-sm text-gray-600">Développement d'un site responsive.</p>
        </div>
        <!-- Project 3 -->
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
          <div class="w-full h-56 bg-gray-300 rounded-t-lg mb-4"></div>
          <h3 class="text-xl font-semibold mb-2">Application Web</h3>
          <p class="text-sm text-gray-600">Conception d'une app de gestion.</p>
        </div>
      </div>
    </main>
  </body>
</html>
