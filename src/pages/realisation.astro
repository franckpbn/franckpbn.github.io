---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

// Liste des projets
const projects = [
  {
    title: "Projet 1",
    description: "Un projet personnel pour apprendre Blender.",
    image: "/réalisation2.png",
    link: "/projet1",
  },
  {
    title: "Projet 2",
    description: "Création de modèles 3D avec des textures complexes.",
    image: "/réalisation2.png",
    link: "/projet2",
  },
  {
    title: "Projet 3",
    description: "Animation et rendu réaliste dans Blender.",
    image: "/réalisation2.png",
    link: "/projet3",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex justify-center items-center">
    <main class="container">
      <div class="flex justify-center pt-3.5">
        <Header />
      </div>

      <!-- Section Projet Principal -->
      <section class="my-16">
        <h2 class="font-bebas text-8xl md:text-[150px] font-bold mb-6">
          Projet Principal
        </h2>
        <div class="relative bg-white rounded-lg shadow-lg overflow-hidden">
          <img
            src="/réalisation2.png"
            alt="Projet Principal"
            class="w-full h-[400px] object-cover"
          />
          <div class="p-6">
            <h3 class="text-3xl font-bold text-gray-800 mb-4">
              Blender - Modélisation 3D
            </h3>
            <p class="text-gray-600 mb-4">
              Ce projet a été réalisé dans Blender, un logiciel de modélisation
              3D. Il inclut des textures complexes, un éclairage réaliste et la
              réalisation des backrooms.
            </p>
            <a
              href="/projet1"
              class="px-6 py-2 rounded-full bg-lime-500 text-white font-semibold shadow-md hover:bg-lime-500 hover:shadow-lg hover:text-black transition-all duration-300"
            >
              En savoir plus
            </a>
          </div>
        </div>
      </section>

      <!-- Section Projets Secondaires -->
      <section>
        <h2 class="text-4xl font-bold mb-6">Projets Secondaires</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            projects.map((project) => {
              return (
                <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-transform duration-300 hover:scale-105">
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-48 object-cover"
                  />
                  <div class="p-4">
                    <h3 class="text-2xl font-semibold text-gray-800">
                      {project.title}
                    </h3>
                    <p class="text-gray-600 text-sm mb-4">
                      {project.description}
                    </p>
                    <a
                      href={project.link}
                      class="text-lime-500 font-semibold hover:underline"
                    >
                      Détails
                    </a>
                  </div>
                </div>
              );
            })
          }
        </div>
      </section>
      <footer class="bg-gray-800 text-white text-center py-4 mt-8">
        <p class="text-sm">© 2024 Franck Puybonnieux. Tous droits réservés.</p>
      </footer>
    </main>
  </body>
</html>
